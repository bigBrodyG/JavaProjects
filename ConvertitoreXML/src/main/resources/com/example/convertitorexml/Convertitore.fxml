<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.convertitorexml.ConvertitoreController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <Label text="Convertitore di Valuta" textAlignment="CENTER" textOverrun="WORD_ELLIPSIS">
         <font>
            <Font name="Fira Code Bold" size="24.0" />
         </font></Label>
      <GridPane hgap="10.0" prefHeight="92.0" prefWidth="420.0" vgap="10.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label prefHeight="18.0" prefWidth="66.0" text="Euro (€)">
               <font>
                  <Font name="Inter Semi Bold Italic" size="13.0" />
               </font>
               <GridPane.margin>
                  <Insets left="30.0" />
               </GridPane.margin></Label>
            <TextField fx:id="tfEuro" GridPane.columnIndex="1" />
            <Button fx:id="btnEuro" mnemonicParsing="false" onAction="#btnEuroEvent" text="Converti in $" GridPane.columnIndex="2" />
            <Label text="Dollari ($)" GridPane.rowIndex="1">
               <GridPane.margin>
                  <Insets left="30.0" />
               </GridPane.margin>
               <font>
                  <Font name="Inter Semi Bold Italic" size="13.0" />
               </font></Label>
            <TextField fx:id="tfDollari" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Button fx:id="btnDollari" mnemonicParsing="false" onAction="#btnDollariEvent" text="Converti in €" GridPane.columnIndex="2" GridPane.rowIndex="1" />
         </children>
      </GridPane>
      <HBox alignment="CENTER" spacing="10.0">
         <children>
            <Button fx:id="btnChiudi" mnemonicParsing="false" onAction="#btnChiudiEvent" text="Chiudi" />
         </children>
      </HBox>
   </children>
</VBox>
